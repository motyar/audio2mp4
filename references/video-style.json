{
  "background": {
    "color": "#000000",
    "type": "solid"
  },
  "text": {
    "fontFamily": "Arial, sans-serif",
    "fontWeight": "bold",
    "fontSize": 90,
    "color": "#FFFFFF",
    "strokeColor": "#000000",
    "strokeWidth": 12,
    "lineHeight": 1.3,
    "maxWordsPerLine": 2,
    "maxChunkSize": 4,
    "position": "center",
    "positionY": 0.5
  },
  "highlight": {
    "color": "#FFD700",
    "strokeColor": "#000000"
  },
  "animation": {
    "mode": "chunk",
    "pauseThreshold": 0.3
  },
  "video": {
    "width": 1080,
    "height": 1920,
    "fps": 30,
    "codec": "libx264",
    "preset": "fast",
    "crf": 23
  }
}
